<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardUseCompatPadding="false"
    card_view:cardBackgroundColor="@color/primary"
    android:layout_margin="0sp"
    card_view:cardCornerRadius="1sp"
    card_view:contentPadding="0dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:addStatesFromChildren="false"
    android:descendantFocusability="afterDescendants">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_margin="3dp"
            android:background="@color/cardview_light_background"
            android:orientation="vertical"
            android:addStatesFromChildren="true"
            android:descendantFocusability="beforeDescendants">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary">

                <ImageView
                    android:id="@+id/RvImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_play"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_play_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play"
                    android:layout_gravity="center"
                    android:foregroundGravity="top"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar_publiclsit"
                    android:layout_gravity="center" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@color/primary"
            android:orientation="vertical"
            android:addStatesFromChildren="false"
            android:descendantFocusability="afterDescendants">

            <TextView
                android:id="@+id/RvVideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:singleLine="true"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:addStatesFromChildren="false"
                android:descendantFocusability="afterDescendants">
                <TextView
                    android:id="@+id/RvTags_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:drawableLeft="@drawable/ic_tags"
                    android:drawablePadding="5sp"
                    android:singleLine="true"
                    android:text="New Text"
                    android:textColor="@color/SwitchOrange"
                    android:textSize="12sp"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal|center"
                    android:padding="1dp"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:id="@+id/textView_tag_1"
                    android:layout_margin="2dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:lines="1"
                    android:id="@+id/textView_tag_2"
                    android:layout_margin="2dp"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:lines="1"
                    android:layout_margin="2dp"
                    android:id="@+id/textView_tag_3"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:lines="1"
                    android:layout_margin="2dp"
                    android:id="@+id/textView_tag_4"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/RvSender"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="5sp"
                android:drawableLeft="@drawable/ic_rv_mail"
                android:drawablePadding="5sp"
                android:drawableTint="#f06292"
                android:singleLine="true"
                android:text="New Text"
                android:textColor="#f06292"
                android:visibility="invisible"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:weightSum="6"
               >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="000 Likes"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:id="@+id/textView_likes"
                    android:layout_weight="2"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|left"
                    android:layout_marginBottom="3dp"
                    android:drawableLeft="@drawable/ic_heart_white"/>

                <TextView
                    android:id="@+id/textView_viewsMoreTags"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="000 Views"
                    android:textColor="@color/rv_list_items"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:maxLines="1"
                    android:focusableInTouchMode="true"
                    android:drawableLeft="@drawable/ic_view_white"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|left"
                    android:layout_weight="2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/RvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="0sp"
                android:drawablePadding="0sp"
                android:singleLine="true"
                android:text="New Text"
                android:textColor="@color/rv_list_items"
                android:textSize="0sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/RvTime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="0sp"
                android:drawablePadding="0sp"
                android:singleLine="true"
                android:text="New Text"
                android:visibility="invisible"

                android:textColor="@color/rv_list_items"
                android:textSize="0sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rv_menu_button_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_margin="5dp"
            >

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center_vertical|right"
                android:background="@color/primary"
                android:src="@drawable/ic_rv_options" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha=".6"
        android:layout_marginBottom="3dp"
        android:background="@color/white"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:visibility="gone"
        android:addStatesFromChildren="false"
        android:descendantFocusability="afterDescendants"
        android:background="#E7E7E7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal|center"
            android:padding="3dp"
            android:lines="1"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:id="@+id/textView_comment_1"
            android:layout_margin="2dp"
            android:visibility="visible"
            android:background="@drawable/round_corner_tv_comments"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal|center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:padding="3dp"
            android:lines="1"
            android:id="@+id/textView_comment_2"
            android:layout_margin="2dp"
            android:visibility="visible"
            android:background="@drawable/round_corner_tv_comments"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal|center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:padding="3dp"
            android:lines="1"
            android:layout_margin="2dp"
            android:id="@+id/textView_comment_3"
            android:visibility="visible"
            android:background="@drawable/round_corner_tv_comments"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal|center"
            android:layout_weight="1"
            android:background="@drawable/round_corner_tv_comments"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:padding="3dp"
            android:lines="1"
            android:layout_margin="2dp"
            android:id="@+id/textView_comment_4"
            android:visibility="visible"/>

    </LinearLayout>




</LinearLayout>
</android.support.v7.widget.CardView>




