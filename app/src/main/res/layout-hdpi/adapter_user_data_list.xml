<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal"
        android:addStatesFromChildren="false"
        android:weightSum="14"
        android:descendantFocusability="afterDescendants">
        <FrameLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/private_recycle_curve">

            <ImageView
                android:id="@+id/RvImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_audio_icon"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mic"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:alpha=".9"
                android:foregroundGravity="top"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_play_icon"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play"
                android:layout_gravity="center"
                android:foregroundGravity="top"/>

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_publiclsit"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:addStatesFromChildren="false"
            android:visibility="gone"
            android:descendantFocusability="afterDescendants">
            <TextView
                android:id="@+id/RvTags_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="5sp"
                android:drawableLeft="@drawable/ic_tags"
                android:drawablePadding="5sp"
                android:singleLine="true"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:padding="1dp"
                android:lines="1"
                android:layout_weight="1"
                android:textColor="@color/rv_list_items"
                android:textSize="12sp"
                android:id="@+id/textView_tag_1"
                android:layout_margin="2dp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textColor="@color/rv_list_items"
                android:textSize="12sp"
                android:padding="1dp"
                android:lines="1"
                android:id="@+id/textView_tag_2"
                android:layout_margin="2dp"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textColor="@color/rv_list_items"
                android:textSize="12sp"
                android:padding="1dp"
                android:lines="1"
                android:layout_margin="2dp"
                android:id="@+id/textView_tag_3"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textColor="@color/rv_list_items"
                android:textSize="12sp"
                android:padding="1dp"
                android:lines="1"
                android:layout_margin="2dp"
                android:id="@+id/textView_tag_4"
                android:visibility="invisible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/RvTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="5sp"
            android:drawablePadding="5sp"
            android:drawableTint="#f06292"
            android:maxLines="1"
            android:text="New Text"
            android:layout_weight="0"
            android:textColor="#f06292"
            android:visibility="visible"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/RvVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="Title"
                    android:gravity="center_vertical"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:typeface="normal"/>



            </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Likes "
                android:textColor="@color/Text_tag_BG"
                android:textSize="9sp"
                android:id="@+id/textView_likes"
                android:layout_weight="2"
                android:maxLines="1"
                android:drawablePadding="3dp"
                android:textAlignment="gravity"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_like_filled"/>

            <TextView
                android:id="@+id/textView_comments"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="00 Reactions"
                android:textColor="@color/Text_tag_BG"
                android:textSize="9sp"
                android:clickable="true"
                android:maxLines="1"
                android:textAlignment="gravity"
                android:drawablePadding="3dp"
                android:focusableInTouchMode="true"
                android:drawableLeft="@drawable/ic_comment"
                android:gravity="left|center_vertical"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/textView_viewsMoreTags"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text=" Views"
                android:textColor="@color/Text_tag_BG"
                android:textSize="9sp"
                android:clickable="true"
                android:maxLines="1"
                android:drawablePadding="3dp"
                android:textAlignment="gravity"
                android:focusableInTouchMode="true"
                android:drawableLeft="@drawable/ic_views"
                android:gravity="left|center_vertical"
                android:layout_weight="2"/>
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/RvSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0sp"
            android:layout_marginLeft="0sp"
            android:drawablePadding="0sp"
            android:singleLine="true"
            android:text="New Text"
            android:textColor="@color/rv_list_items"
            android:textSize="0sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RvTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="0sp"
            android:layout_marginLeft="0sp"
            android:drawablePadding="0sp"
            android:singleLine="true"
            android:text="New Text"
            android:visibility="invisible"

            android:textColor="@color/rv_list_items"
            android:textSize="0sp" />

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ll_followuser">
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
         android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/ic_view_profile_icon"
        android:text=""
        android:id="@+id/textView_followuser"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="0"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:visibility="gone"

        android:text=""/>

</LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:addStatesFromChildren="false"
        android:descendantFocusability="afterDescendants">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">



           <LinearLayout
                android:id="@+id/rv_menu_button_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_margin="5dp"
                >

                <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center_vertical|right"
                    android:background="@color/Public_list_bg"
                    android:src="@drawable/ic_rv_options" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:visibility="gone"
            android:addStatesFromChildren="false"
            android:descendantFocusability="afterDescendants"
            android:background="#E7E7E7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:padding="3dp"
                android:lines="1"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/textView_comment_1"
                android:layout_margin="2dp"
                android:visibility="visible"
                android:background="@drawable/round_corner_tv_comments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:padding="3dp"
                android:lines="1"
                android:id="@+id/textView_comment_2"
                android:layout_margin="2dp"
                android:visibility="visible"
                android:background="@drawable/round_corner_tv_comments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:padding="3dp"
                android:lines="1"
                android:layout_margin="2dp"
                android:id="@+id/textView_comment_3"
                android:visibility="visible"
                android:background="@drawable/round_corner_tv_comments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal|center"
                android:layout_weight="1"
                android:background="@drawable/round_corner_tv_comments"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:padding="3dp"
                android:lines="1"
                android:layout_margin="2dp"
                android:id="@+id/textView_comment_4"
                android:visibility="visible"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey200">

    </LinearLayout>

</LinearLayout>


