<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_guide"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <!--  <include layout="@layout/dashboardscroller_v1"/>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent_black_dark">


            <RelativeLayout
                android:layout_width="2dp"
                android:layout_height="15dp"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="29dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:background="@color/white">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="188dp"
                android:background="@color/white">

            </RelativeLayout>
        </RelativeLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Xpressions shared"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_tb_back"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout4"
        android:layout_toEndOf="@+id/relativeLayout4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="Send an audio Xpression"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a video Xpression"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:gravity="center_vertical"
        android:text=""
        android:layout_toRightOf="@+id/textView13"
        android:layout_alignTop="@+id/imageView2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your private Xpressions"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout4"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"

        android:layout_above="@+id/textView13"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Search iXprez"
        android:drawablePadding="-3dp"
        android:drawableLeft="@drawable/ic_tb_back"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your iXprez stream"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout2"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        app:srcCompat="@drawable/ic_tb_back" />

    <ProgressBar
        android:id="@+id/progressBar_guide"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_guide_progress"
        android:text="Please wait for initial setup ..."
        android:textColor="@color/orange"
        android:layout_below="@+id/progressBar_guide"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/default_title_indicator_text_size"/>


</RelativeLayout>