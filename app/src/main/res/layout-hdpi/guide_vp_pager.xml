
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <TextView
        android:text="Title"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:id="@+id/textView_guide_title"
        android:textSize="25dp"
        android:textColor="@android:drawable/screen_background_dark_transparent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="8"

        />

    <ImageView
        android:id="@+id/imageView_guide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play"
        android:contentDescription="@string/app_name"
        android:layout_weight="60"
         />
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:id="@+id/videoView_guide"
        android:visibility="gone"
        />
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="22"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:id="@+id/textView_guide_description" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:visibility="gone"
        android:layout_weight="10" >

        <TextView
            android:id="@+id/pagenumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="pageOneClick"
            android:text="    "
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/pagenumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:text="    "
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/pagenumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:text="    "
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"/>


    </LinearLayout>



</LinearLayout>