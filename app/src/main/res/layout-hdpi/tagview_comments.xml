<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_tick"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_tick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test tag"
        android:gravity="center_horizontal|center"
        android:textColor="@color/white"
        android:padding="3dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_weight="1"
        android:id="@+id/textView_taglist_text"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_tick"
        android:layout_toEndOf="@+id/iv_tick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# 000"
        android:id="@+id/textView_tag_count"
        android:background="@drawable/btn_round_red"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView_taglist_text"
        android:layout_toEndOf="@+id/textView_taglist_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height=".5sp"
        android:layout_below="@id/iv_tick"
        android:background="#353559"></RelativeLayout>

</RelativeLayout>