<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_guide"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent_black_dark">



            <RelativeLayout
                android:layout_width="2dp"
                android:layout_height="15dp"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="29dp"
                android:layout_marginEnd="49dp"
                android:layout_marginRight="49dp"
                android:background="@color/white">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="122dp"
                android:layout_marginRight="122dp"
                android:layout_marginTop="188dp"
                android:background="@color/white">

            </RelativeLayout>
        </RelativeLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Xpressions shared"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_tb_back"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout4"
        android:layout_toEndOf="@+id/relativeLayout4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:text="Send an audio xpression."
        android:layout_below="@+id/textView4"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send video xpression"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:gravity="center_vertical"
        android:text=""
        android:layout_toRightOf="@+id/textView13"
        android:layout_alignTop="@+id/imageView2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your private xpressions"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout4"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"

        android:layout_above="@+id/textView13"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Search iXprez"
        android:layout_marginLeft="-10dp"
        android:drawablePadding="-3dp"
        android:drawableLeft="@drawable/ic_tb_back"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your iXprez stream"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout2"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        app:srcCompat="@drawable/ic_tb_back" />

</RelativeLayout>