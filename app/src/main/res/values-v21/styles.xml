<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="SettingactvitySwitch">
                <!-- colorPrimary is used for the default action bar background -->
                <item name="colorPrimary">@color/SwitchOrange</item>
                <item name="android:colorControlActivated" >
                        @color/SwitchOrange
                </item>
                <!-- colorPrimaryDark is used for the status bar -->
                <item name="colorPrimaryDark">@color/SwitchOrange</item>
                <item name="android:colorControlNormal">@color/orange</item>

                <!-- colorAccent is used as the default value for colorControlActivated,
                     which is used to tint widgets -->
                <item name="colorAccent">@color/SwitchOrange</item>

                <!-- You can also set colorControlNormal, colorControlActivated
                     colorControlHighlight, and colorSwitchThumbNormal. -->

        </style>
</resources>